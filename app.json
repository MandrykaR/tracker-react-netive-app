{
	"expo": {
		"name": "Tracker",
		"slug": "Tracker",
		"platforms": ["ios", "android", "web"],
		"version": "1.0.0",
		"packagerOpts": {
			"minify": false
		},
		"doctor": {
			"reactNativeDirectoryCheck": {
				"exclude": [
					"react-native-vision-camera",
					"expo-modules-autolinking",
					"react-native-chart-kit"
				]
			}
		},
		"orientation": "portrait",
		"icon": "./assets/images/money.png",
		"scheme": ["tracker"],
		"userInterfaceStyle": "automatic",
		"splash": {
			"image": "./assets/images/card.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"web": {
			"favicon": "./public/assets/images/favicon.png",
			"manifest": {
				"name": "Tracker React Native App",
				"short_name": "TrackerApp",
				"start_url": ".",
				"display": "standalone",
				"background_color": "#ffffff",
				"theme_color": "#000000",
				"description": "An app for tracking transactions",
				"icons": [
					{
						"src": "./public/assets/images/logo-192px.png",
						"sizes": "192x192",
						"type": "image/png"
					},
					{
						"src": "./assets/images/512px logo.png",
						"sizes": "512x512",
						"type": "image/png"
					}
				]
			},
			"serviceWorker": {
				"src": "service-worker.js"
			},
			"output": "static"
		}
	}
}
