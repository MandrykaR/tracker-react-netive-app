{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"jsx": "react-native",
		"types": ["node"],
		"allowImportingTsExtensions": true,
		"paths": {
			"@/*": ["./*"]
		},
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.jsx"],
	"exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
